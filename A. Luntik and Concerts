#include<bits/stdc++.h>
using namespace std;
#define int long long int
#define f(i,n) for(int i=0;i<n;i++)
#define dbg(x) cout<<#x<<"= "<<x<<endl

int32_t main(){
    int t = 1;
    cin>>t;

    while(t--){
        int a, b, c;
        cin>>a>>b>>c;

        // Case 1 : if c is even
        if(c % 2 == 0){
                // Case 1.3 : if a is even
            if(a % 2 == 0){
                cout<<0<<endl;
            }
            else{
                    cout<<1<<endl;
            }
        }
        // Case 2 : if c is odd
        else{
            // case 2.2 : now b kitna bhi ho depend hi nhi karta kuch
            if(a % 2 == 0){
                cout<<1<<endl;
            }
            else{
                cout<<0<<endl;
            }
        }
    }

    return 0;
}
