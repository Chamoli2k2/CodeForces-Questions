#include<bits/stdc++.h>
using namespace std;
#define int long long int
#define f(i,n) for(int i=0;i<n;i++)
#define dbg(x) cout<<#x<<"= "<<x<<endl

int32_t main(){
    int t = 1;
    //cin>>t;

    while(t--){
        int n;
        cin>>n;
        if(n & 1){
            cout<<"NO";
        }
        else{
            
            int k = n - 2;
            
            if(k % 2 == 0 && k > 0){
                cout<<"YES";
            }
            else{
                cout<<"NO";
            }
        }
        
        cout<<endl;
    }

    return 0;
}
